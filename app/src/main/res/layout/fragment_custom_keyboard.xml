<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.snu.hcil.customkeyboard.TestActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout1"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="vertical"
        android:text="log"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qwerty_view"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:layout_weight="0.77">

            <TextView
                android:id="@+id/presented_text"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_above="@+id/transcribed_text"
                android:background="@android:color/darker_gray"
                android:paddingBottom="0dp"
                android:paddingLeft="30dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:gravity="center_vertical"
                android:text="presented text" />

            <TextView
                android:id="@+id/transcribed_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/background_light"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:gravity="left|top"
                android:text="transcribed text"/>
        </LinearLayout>

        <Button
            android:id="@+id/enter_button"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:text=">" />
    </LinearLayout>

    <kr.ac.snu.hcil.customkeyboard.QwertyView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/qwerty_view"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
